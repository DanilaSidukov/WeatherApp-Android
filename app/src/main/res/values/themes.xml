<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.Design.Light.NoActionBar">
        <item name="android:forceDarkAllowed">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/general_background</item>
        <item name="colorPrimaryVariant">@color/general_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorEdgeEffect">@color/general_background</item>

        <item name="screenBackground">@color/general_background</item>
        <item name="backgroundTrackColor">@color/grey_2</item>
        <item name="progressTrackColor">@color/green</item>
        <item name="descriptionTextColor">@color/grey_3</item>
        <item name="descriptionGreyTextColor">@color/grey</item>

        <item name="ArcProgressBar_style">@style/ArcProgressBar</item>

        <item name="progressYellow">@color/progress_yellow</item>
        <item name="progressGreen">@color/progress_green</item>
        
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>


    </style>
</resources>