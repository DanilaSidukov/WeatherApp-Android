<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance"/>

    <style name="TextAppearance.General_black">
        <item name="android:fontFamily">@font/staatliches_regular</item>
        <item name="color">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.General_grey">
        <item name="android:fontFamily">@font/staatliches_regular</item>
        <item name="color">@color/grey</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Weather_condition">
        <item name="android:fontFamily">@font/staatliches_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="TextAppearance.Description">
        <item name="android:fontFamily">@font/staatliches_regular</item>
        <item name="color">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="ButtonEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">137dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginEnd">137dp</item>
        <item name="background">@drawable/round_button</item>
        <item name="textFillColor">@color/black</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="Kaka" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.General_grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ArcProgressBar">
        <item name="backgroundTrackColor">?backgroundTrackColor</item>
        <item name="progressTrackColor">?progressTrackColor</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="background">@color/white</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>