<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_date_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/staatliches_regular"
        android:gravity="center"
        tools:text="Monday"
        android:textColor="?attr/textColorGrey"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/image_date_weather"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@null"
        android:paddingHorizontal="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_sun"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_temperature_date_weather"
        android:layout_width="45dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/staatliches_regular"
        android:gravity="center"
        tools:text="20"
        android:textColor="?attr/textColorBlack"
        android:textSize="18sp" />

</LinearLayout>