<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/general_background_night</item>
        <item name="colorPrimaryVariant">@color/general_background_night</item>
        <item name="colorOnPrimary">@color/white_night</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/general_background_night</item>
        <item name="colorSecondaryVariant">@color/general_background_night</item>
        <item name="colorOnSecondary">@color/general_background_night</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:colorEdgeEffect">@null</item>
        <!-- Customize your theme here. -->

        <item name="screenBackground">@color/general_background_night</item>
        <item name="cardViewBackground">@color/item_background_night</item>
        <item name="backgroundTrackColor">@color/grey_2</item>
        <item name="progressTrackColor">@color/green</item>
        <item name="descriptionTextColor">@color/grey_3</item>
        <item name="descriptionGreyTextColor">@color/white</item>
        <item name="textColorBlack">@color/white_night</item>
        <item name="textColorGrey">@color/black</item>
        <item name="textColorGrey2">@color/white_night</item>
        <item name="textColorBlack2">@color/black</item>
        <item name="textColorBlackWeak">@color/black</item>
        <item name="buttonColor">@color/item_background_night</item>
        <item name="android:overScrollMode">never</item>
        <item name="buttonDialogColor">@color/button_dialog_color_night</item>

        <item name="ArcProgressBar_style">@style/ArcProgressBar</item>

        <item name="progressYellow">@color/progress_yellow</item>
        <item name="progressGreen">@color/progress_green</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@color/white_transparent</item>

    </style>
</resources>